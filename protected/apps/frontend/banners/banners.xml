<?xml version="1.0" encoding="UTF-8"?>
<root type="app">
    <name>banner</name>
    <title>Banner</title>
    <author>BHmedia group php</author>
    <version>1.0.0</version>
    <creationDate>July 2006</creationDate>
    <description>Top hits article</description>
    
    <params>
        <param title="advance" path="extensions/modules/tophits/element">
            <field type="radio" name="show_link_title" default="1" label="Show Link Title" >
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
        </param>
    </params>
    
    <views>
        <view name="banners" title="Banners" desc="Danh sách banner">
            <layouts>
                <layout value="blog" desc="Danh sách banner dạng blog">Blog</layout>
                <layout value="list">List</layout>
            </layouts>
             <param title="advance">
                 <field type="text" name="id" label="Category" />
                 <field type="text" name="limit" label="Limit" />
                 <field type="text" name="col" label="Col" />
            </param>
        </view>
        
        <view name="banner" title="Banner" desc="1 banner">
            <param title="advance">
                 <field type="text" name="id" label="Category" />
                 <field type="text" name="limit" label="Limit" />
                 <field type="text" name="col" label="Col" />
            </param>
        </view>
    </views>
    
</root>
