<?xml version="1.0" encoding="UTF-8"?>
<root type="app">
    <name>videos</name>
    <title>Videos</title>
    <author>BHmedia group php</author>
    <version>1.0.0</version>
    <creationDate>July 2006</creationDate>
    <description>Videos</description> 
    <views>
        <view name="home" title="Home" desc="Trang video">
             <param title="advance">
                     <field type="text" name="id" label="Category" />
                     <field type="text" name="limit" label="Limit" />
                     <field type="text" name="col" label="Col" />
                </param>
        </view>       
        <view name="category" title="Category" desc="Danh mục video">
            <layouts>
                <layout value="blog" desc="Danh mục bài viết blog">Blog</layout>
                <layout value="list" desc="Danh mục bài danh sach">List</layout>
            </layouts>              
            <param title="advance">
                <field type="catid" name="id" label="Category" request="true" />                 
                 <field type="text" name="limit" label="Limit" />
                 <field type="text" name="col" label="Col" />
            </param>
        </view>
        
        <view name="detail" title="Detail" desc="Chi tiết video">
            <param title="advance">
               <field type="text" name="id" label="Category" />
            </param>
        </view>
    </views>
    
</root>
